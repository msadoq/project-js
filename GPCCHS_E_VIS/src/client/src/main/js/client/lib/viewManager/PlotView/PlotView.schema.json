{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "lineStyle": {
            "type": "string",
            "enum": ["Continuous", "Dotted", "Dashed"]
        },
        "color": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]+$"
        },
        "textStyle": {
            "type": "object",
            "properties": {
                "font": {
                    "type": "string"
                },
                "size": {
                    "type": "number"
                },
                "bold": {
                    "type": "boolean",
                    "default": false
                },
                "italic": {
                    "type": "boolean",
                    "default": false
                },
                "underline": {
                    "type": "boolean",
                    "default": false
                },
                "strikeOut": {
                    "type": "boolean",
                    "default": false
                },
                "align": {
                    "type": "string",
                    "default": "left",
                    "enum": ["left", "center", "right"]
                },
                "color": {
                    "$ref": "#/definitions/color"
                }
            }
        },
        "condition": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "operator": {
                    "type": "string",
                    "enum": ["==", "!=", "<", ">", "<=", ">=", "CONTAINS", "ICONTAINS"]
                },
                "operand": {
                    "type": "string"
                }
            }
        },
        "connectedData": {
            "type": "object",
            "properties": {
                "formula": {
                    "type": "string"
                },
                "fieldX": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                },
                "digits": {
                    "type": "integer"
                },
                "format": {
                    "type": "string"
                },
                "filter": {
                  "type": "array",
                  "items":{
                    "$ref": "#/definitions/condition"
                  }
                },
                "domain": {
                    "type": "string"
                },
                "timeline": {
                    "type": "string"
                }
            },
            "required": ["formula", "fieldX", "unit", "digits", "format", "domain", "timeline"]
        },
        "viewEntryPoint": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "connectedData": {
                    "$ref": "#/definitions/connectedData"
                },
                "stateColours": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "color": {
                                "type": "integer"
                            },
                            "condition": {
                                "$ref": "#/definitions/condition"
                            }
                        },
                        "required": ["color", "condition"]
                    }
                }
            },
            "required": ["name"]
        },
        "plotViewEntryPoint": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "connectedData": {
                    "allOf": [{
                        "$ref": "#/definitions/connectedData"
                    }, {
                        "properties": {
                            "axisId": {
                                "type": "string"
                            }
                        }
                    }]
                },
                "objectStyle": {
                  "line": {
                    "style": { "$ref": "#/definitions/lineStyle" },
                    "size": { "type": "number" }
                  },
                  "points": {
                    "style": {
                      "type": "string",
                      "enum": ["None", "Triangle", "Square", "Dot"]
                    },
                    "size": { "type": "number" }
                  },
                  "curveColour": {
                      "$ref": "#/definitions/color"
                  }
                },
                "stateColours": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "color": {
                                "$ref": "#/definitions/color"
                            },
                            "condition": {
                                "$ref": "#/definitions/condition"
                            }
                        },
                        "required": ["color", "condition"]
                    }
                }
            },
            "required": ["name"]
        },
        "axis": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "unit": {
                    "type": "string"
                },
                "style": {
                    "$ref": "#/definitions/textStyle"
                },
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                },
                "autoLimits": {
                    "type": "boolean"
                },
                "tickStep": {
                    "type": "number"
                },
                "autoTick": {
                    "type": "boolean"
                },
                "showTicks": {
                    "type": "boolean"
                },
                "isLogarithmic": {
                    "type": "boolean"
                },
                "showAxis": {
                    "type": "boolean"
                },
                "showTickLabels": {
                    "type": "boolean"
                }
            },
            "required": ["unit"]
        },
        "curveType": {
            "type": "string",
            "default": "Dotted",
            "enum": ["Continuous", "Dotted", "Dashed"]
        },
        "viewCommonAttributes": {
            "type": "object",
            "properties": {
                "links": {
                    "type": "array",
                    "items": {
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "procedures": {
                    "type": "array",
                    "items": {
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "defaultRatio": {
                    "type": "object",
                    "properties": {
                        "length": {
                            "type": "number"
                        },
                        "width": {
                            "type": "number"
                        }
                    },
                    "required": ["length", "width"]
                }
            }
        }
    },
    "type": "object",
    "allOf": [{
        "$ref": "#/definitions/viewCommonAttributes"
    }, {
        "properties": {
            "type": {
                "type": "string",
                "enum": ["PlotView"]
            },

            "entryPoints": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/plotViewEntryPoint"
                }
            },
            "axes": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/axis"
                }
            },
            "grids": {
                "type": "array",
                "items": {
                    "xAxisId": {
                        "type": "string"
                    },
                    "yAxisId": {
                        "type": "string"
                    },
                    "line": {
                      "type": "object",
                      "properties": {
                        "style": {
                          "$ref": "#/definitions/lineStyle"
                        },
                        "size": {
                          "type": "number"
                        }
                      },
                      "required": ["style", "size"]
                    },
                    "showGrid": {
                        "type": "boolean"
                    }
                },
                "required": ["yAxisId", "line"]
            },
            "title": {
                "type": "string"
            },
            "titleStyle": {
                "$ref": "#/definitions/textStyle"
            },
            "backgroundColour": {
                "$ref": "#/definitions/color"
            },
            "showYAxes": {
              "type": "string",
              "default": "left",
              "enum": ["", "left", "right", "no", "false"]
            },
            "legend": {
                "type": "object",
                "properties": {
                    "style": {
                        "$ref": "#/definitions/textStyle"
                    },
                    "location": {
                        "type": "string",
                        "enum": ["top", "left", "right", "bottom"]
                    }
                }
            },
            "markers": {
                "type": "array",
                "items": {
                    "oneOf": [{
                        "properties": {
                            "kind": {
                                "type": "string",
                                "enum": ["Text"]
                            },
                            "label": {
                                "type": "string"
                            },
                            "style": {
                                "$ref": "#/definitions/textStyle"
                            },
                            "relativePosX": {
                                "type": "number"
                            },
                            "relativePosY": {
                                "type": "number"
                            }
                        },
                        "required": ["kind", "label", "relativePosX", "relativePosY"],
                        "additionalProperties": false
                    }, {
                        "properties": {
                            "kind": {
                                "type": "string",
                                "enum": ["Vertical"]
                            },
                            "style": {
                                "$ref": "#/definitions/lineStyle"
                            },
                            "posX": {
                                "type": "number"
                            },
                            "xAxisId": {
                                "type": "integer"
                            }
                        },
                        "required": ["kind", "posX", "xAxisId"],
                        "additionalProperties": false
                    }, {
                        "properties": {
                            "kind": {
                                "type": "string",
                                "enum": ["Horizontal"]
                            },
                            "style": {
                                "$ref": "#/definitions/lineStyle"
                            },
                            "posY": {
                                "type": "number"
                            },
                            "yAxisId": {
                                "type": "integer"
                            }
                        },
                        "required": ["kind", "posY", "yAxisId"],
                        "additionalProperties": false
                    }]
                }
            }
        },
        "required": ["title"]
    }]
}
