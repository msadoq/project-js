{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "titleStyle": {
      "type": "object",
      "properties": {
        "font": {
          "type": "string",
          "minLength": 1
        },
        "size": {
          "type": "number"
        },
        "bold": {
          "type": "boolean"
        },
        "italic": {
          "type": "boolean"
        },
        "underline": {
          "type": "boolean"
        },
        "strikeOut": {
          "type": "boolean"
        },
        "align": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "links": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "required": [
          "name",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "defaultRatio": {
      "type": "object",
      "properties": {
        "length": {
          "type": "number"
        },
        "width": {
          "type": "number"
        }
      },
      "required": [
        "length",
        "width"
      ]
    },
    "content": {
      "type": "string",
      "minLength": 1
    },
    "entryPoints": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "required": [
          "name"
        ],
        "properties": {
          "connectedData": {
            "type": "object",
            "properties": {
              "convertFrom": {
                "type": "string"
              },
              "convertTo": {
                "type": "string"
              },
              "digits": {
                "type": "number"
              },
              "domain": {
                "type": "string",
                "minLength": 1
              },
              "filter": {
                "type": "array",
                "items": {
                  "required": [],
                  "properties": {}
                }
              },
              "format": {
                "type": "string"
              },
              "formula": {
                "type": "string",
                "minLength": 1
              },
              "provider": {
                "type": "string",
                "minLength": 1
              },
              "timeline": {
                "type": "string",
                "minLength": 1
              },
              "unit": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "digits",
              "domain",
              "format",
              "formula",
              "timeline",
              "unit"
            ]
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "stateColors": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "required": [
                "color"
              ],
              "properties": {
                "color": {
                  "type": "string",
                  "minLength": 1
                },
                "condition": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string"
                    },
                    "operand": {
                      "type": "string",
                      "minLength": 1
                    },
                    "operator": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "field",
                    "operand",
                    "operator"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "search": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "content",
    "entryPoints"
  ]
}
