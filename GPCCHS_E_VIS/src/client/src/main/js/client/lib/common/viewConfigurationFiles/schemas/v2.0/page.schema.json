{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "page.schema.json",
  "definitions": {
    "geometry": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "w": {
          "type": "number"
        },
        "h": {
          "type": "number"
        },
        "maxH": {
          "type": "number"
        },
        "maxW": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y",
        "w",
        "h"
      ]
    },
    "docLocation": {
      "oneOf": [
        {
          "properties": {
            "oId": {
              "type": "string"
            }
          },
          "required": [
            "oId"
          ]
        },
        {
          "properties": {
            "path": {
              "type": "string"
            }
          },
          "required": [
            "path"
          ]
        }
      ]
    },
    "view": {
      "allOf": [
        {
          "$ref": "#/definitions/docLocation"
        },
        {
          "properties": {
            "geometry": {
              "$ref": "#/definitions/geometry"
            },
            "windowState": {
              "type": "string",
              "default": "Normalized",
              "enum": [
                "Minimized",
                "Normalized",
                "Maximized"
              ]
            }
          },
          "required": [
            "geometry",
            "windowState"
          ]
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Page"
    },
    "hideBorders": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/view"
      }
    },
    "title": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "views",
    "title"
  ],
  "additionalProperties": false
}
