{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "condition": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "operator": {
                    "type": "string",
                    "enum": [
                        "==",
                        "!=",
                        "<",
                        ">",
                        "<=",
                        ">=",
                        "CONTAINS",
                        "ICONTAINS"
                    ]
                },
                "operand": {
                    "type": "string"
                }
            }
        },
        "connectedData": {
            "type": "object",
            "properties": {
                "filter": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/condition"
                    }
                },
                "domain": {
                    "type": "string"
                },
                "timeline": {
                    "type": "string"
                },
                "mode": {
                  "type": "number"
                }
            },
            "required": [
                "mode",
                "domain",
                "timeline"
            ]
        },
        "viewCommonAttributes": {
            "type": "object",
            "properties": {
                "links": {
                    "type": "array",
                    "items": {
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "procedures": {
                    "type": "array",
                    "items": {
                        "name": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "defaultRatio": {
                    "type": "object",
                    "properties": {
                        "length": {
                            "type": "number"
                        },
                        "width": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "length",
                        "width"
                    ]
                }
            }
        }
    },
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/viewCommonAttributes"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "const": "GroundAlarmView"
                },
                "entryPoint": {
                    "type": "object",
                    "properties": {
                        "connectedData": {
                            "$ref": "#/definitions/connectedData"
                        },
                        "stateColours": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "colour": {
                                        "type": "integer"
                                    },
                                    "condition": {
                                        "$ref": "#/definitions/condition"
                                    }
                                },
                                "required": [
                                    "colour",
                                    "condition"
                                ]
                            }
                        }
                    },
                    "required": [
                        "connectedData"
                    ]
                }
            }
        }
    ]
}
